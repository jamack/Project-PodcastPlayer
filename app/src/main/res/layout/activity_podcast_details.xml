<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_03"
    android:orientation="vertical"
    tools:context="com.example.android.project_podcastplayer.PodcastDetails">

    <LinearLayout style="@style/card_superclass.card_activity_overview">

        <TextView
            style="@style/activity_heading"
            android:text="@string/podcast_details_heading" />

        <TextView
            style="@style/activity_description"
            android:text="@string/podcast_details_description" />

    </LinearLayout>

    <LinearLayout style="@style/card_superclass.card_linked_activities">

        <TextView
            style="@style/links_heading"
            android:text="@string/all_activities_linked_activities_heading" />

        <Button
            android:id="@+id/button_podcastdetails_to_home"
            style="@style/links_button"
            android:text="@string/link_text_home" />

        <Button
            android:id="@+id/button_podcastdetails_to_mypodcasts"
            style="@style/links_button"
            android:text="@string/link_text_my_podcasts" />

        <Button
            android:id="@+id/button_podcastdetails_to_discoverpodcasts"
            style="@style/links_button"
            android:text="@string/link_text_discover_podcasts" />

        <Button
            android:id="@+id/button_podcastdetails_to_full_player"
            style="@style/links_button"
            android:text="@string/link_text_full_player" />

    </LinearLayout>

</LinearLayout>
