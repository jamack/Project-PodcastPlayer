<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.project_podcastplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyPodcasts"
            android:label="My Podcasts" />
        <activity
            android:name=".DiscoverPodcasts"
            android:label="Discover Podcasts" />
        <activity
            android:name=".PodcastDetails"
            android:label="Podcast Details" />
        <activity
            android:name=".Payment"
            android:label="Purchase"></activity>
        <activity android:name=".PodcastPlayer"></activity>
    </application>

</manifest>